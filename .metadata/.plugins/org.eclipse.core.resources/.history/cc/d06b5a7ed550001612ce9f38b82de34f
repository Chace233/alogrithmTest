  //得到文件名 （如果想改直接改这里）
    private static String getFileName(String src){  
    	String fileName = "";
    	int a = 0,b = src.length();
    	for(int i = src.length()-1; i >=0 ;i --){
    		if(src.charAt(i) == '/'){
    			a = i;
    			break;
    		}
    	}
    	fileName = src.substring(a, b);
    	return fileName;
    }
    
	public static void main(String[] args) throws Exception{
    	xincailiaoCrawler crawler = new xincailiaoCrawler("crawl", true);
    	crawler.addSeed("http://www.xincailiao.com/html/weizixun/");//"/"+Functions.getDate()+"/
    	String regex = "http://www.xincailiao.com/html/weizixun/[a-z]+/"+Functions.getYear()+"/"
    	                                  +Functions.getDate()[0]+
    			                      "|"+Functions.getDate()[1]+
    			                      "|"+Functions.getDate()[2]+
    			                      "|"+Functions.getDate()[3]+
    			                      "|"+Functions.getDate()[4]+
    			                      "|"+Functions.getDate()[5]+
    			                      "|"+Functions.getDate()[6]+".*html";
    	System.out.println("###regext:"+regex);
    	crawler.addRegex(regex);
    	crawler.addRegex("-.*\\.(jpg|png|gif).*");
    	crawler.addRegex("-.*#.*");
	    crawler.setThreads(50);
	    crawler.setTopN(100);
	    crawler.start(4);
    }
}

